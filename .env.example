# VM Assessment BOM Generator - Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application environment (development, staging, production)
APP_ENV=production

# Server configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
LOG_LEVEL=info

# =============================================================================
# UPLOAD CONFIGURATION
# =============================================================================

# Maximum upload file size in bytes (100MB)
UPLOAD_MAX_SIZE=104857600

# Session timeout in seconds (24 hours)
SESSION_TIMEOUT=86400

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================

# Cleanup interval in seconds (1 hour)
CLEANUP_INTERVAL=3600

# Maximum concurrent processing sessions
MAX_CONCURRENT_SESSIONS=50

# =============================================================================
# ORACLE CLOUD PRICING CONFIGURATION
# =============================================================================

# Default currency for pricing
DEFAULT_CURRENCY=EUR

# Pricing configuration update interval in seconds (24 hours)
PRICING_UPDATE_INTERVAL=86400

# Oracle Cloud region for pricing
OCI_REGION=eu-frankfurt-1

# =============================================================================
# CONTAINER CONFIGURATION
# =============================================================================

# Container image configuration
IMAGE_NAME=vm-assessment-bom
IMAGE_TAG=latest
REGISTRY=

# Container build tool (podman, docker, buildah)
BUILD_TOOL=podman

# =============================================================================
# KUBERNETES CONFIGURATION
# =============================================================================

# Kubernetes namespace
NAMESPACE=vm-assessment

# kubectl command (for custom kubectl setups)
KUBECTL_CMD=kubectl

# Deploy ingress resources
DEPLOY_INGRESS=false

# Ingress hostname
INGRESS_HOST=vm-assessment.local

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Enable CORS (true/false)
ENABLE_CORS=true

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=*

# Rate limiting (requests per minute)
RATE_LIMIT=60

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Enable Prometheus metrics
ENABLE_METRICS=true

# Metrics endpoint path
METRICS_PATH=/metrics

# Health check endpoint path
HEALTH_PATH=/health

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log format (json, text)
LOG_FORMAT=text

# Log file path (empty for stdout only)
LOG_FILE=

# Enable request logging
LOG_REQUESTS=true

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# Upload storage path
UPLOAD_PATH=/app/static/uploads

# Log storage path
LOG_PATH=/app/logs

# Temporary file retention in hours
TEMP_FILE_RETENTION=24

# =============================================================================
# DATABASE CONFIGURATION (Optional for future features)
# =============================================================================

# Database URL (if using persistent storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/vm_assessment

# Redis URL (if using Redis for session storage)
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================

# Oracle Cloud pricing API endpoint (if using live pricing)
# OCI_PRICING_API_URL=https://api.oci.example.com/pricing

# Oracle Cloud API credentials (if using live pricing)
# OCI_API_KEY_FILE=/path/to/api_key.pem
# OCI_API_KEY_FINGERPRINT=aa:bb:cc:dd:ee:ff
# OCI_TENANCY_ID=ocid1.tenancy.oc1..example
# OCI_USER_ID=ocid1.user.oc1..example

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development mode settings (only for development)
DEBUG=false
RELOAD=false
ACCESS_LOG=true

# Development database (SQLite for local development)
# DEV_DATABASE_URL=sqlite:///./vm_assessment.db

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================

# Production-specific settings
# WORKERS=8
# LOG_LEVEL=warning
# ENABLE_METRICS=true
# LOG_FORMAT=json
# LOG_FILE=/app/logs/app.log

# =============================================================================
# EXAMPLES FOR DIFFERENT ENVIRONMENTS
# =============================================================================

# Development
# APP_ENV=development
# DEBUG=true
# RELOAD=true
# WORKERS=1
# LOG_LEVEL=debug

# Staging
# APP_ENV=staging
# NAMESPACE=vm-assessment-staging
# IMAGE_TAG=develop
# INGRESS_HOST=vm-assessment-staging.example.com

# Production
# APP_ENV=production
# NAMESPACE=vm-assessment-prod
# IMAGE_TAG=v1.0.0
# WORKERS=8
# LOG_LEVEL=warning
# INGRESS_HOST=vm-assessment.example.com
# REGISTRY=registry.example.com